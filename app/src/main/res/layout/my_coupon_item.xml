<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_10"
    android:layout_marginTop="@dimen/_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_12dp"
        android:paddingTop="@dimen/_15dp"
        android:paddingRight="@dimen/_12dp"
        android:paddingBottom="@dimen/_5dp">


        <ImageView
            android:id="@+id/iv_shop_img"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@color/color_ff383b" />

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_6dp"
            android:layout_weight="1"
            android:text="百威官方旗舰店"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/_14dp" />

        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="@dimen/_45dp"
            android:layout_height="@dimen/_22dp"
            android:background="@color/color_ff5438"
            android:gravity="center"
            android:text="进店"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/_14dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_20dp"
        android:paddingTop="@dimen/_15dp"
        android:paddingRight="@dimen/_20dp"
        android:paddingBottom="@dimen/_15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp">

            <LinearLayout
                android:id="@+id/ll_left_bg"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:background="@mipmap/coupon_red_left"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/color_ffffff"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/_20dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="抵扣券 "
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/_10dp" />


            </LinearLayout>

            <LinearLayout
                android:background="@color/color_f9f9f9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_13dp"
                android:paddingTop="@dimen/_12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="@dimen/_50dp"
                        android:layout_height="@dimen/_15dp"
                        android:background="@color/color_ff5438"
                        android:gravity="center"
                        android:text="平台券"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/_11dp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:text="满减红包"
                        android:textColor="@color/color_ff5438"
                        android:textSize="@dimen/_13dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_restrict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买5000元以上可用"
                    android:layout_marginTop="@dimen/_20dp"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/_12dp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效期： 2019-01-24-2019-06-14 "
                    android:layout_marginTop="@dimen/_5dp"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/_8dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_right_bg"
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:background="@mipmap/coupon_red_right"
                android:gravity="center">

                <TextView
                    android:layout_width="@dimen/_12dp"
                    android:layout_height="wrap_content"
                    android:text="立即使用"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/_11dp">

                </TextView>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>