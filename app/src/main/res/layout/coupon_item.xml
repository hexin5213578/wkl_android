<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="108dp"
    android:layout_marginLeft="@dimen/_20dp"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_marginRight="@dimen/_20dp"
    android:background="@color/color_f9f9f9"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="88dp"
        android:layout_height="match_parent"
        android:background="@color/color_ff383b"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/_11dp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/_18dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:text="抵扣券"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/_15dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_13dp"
        android:layout_marginTop="@dimen/_12dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_15dp"
                android:background="@color/color_ff383b"
                android:gravity="center"
                android:paddingLeft="@dimen/_9dp"
                android:paddingRight="@dimen/_9dp"
                android:text="平台券"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/_11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:text="满减红包"
                android:textColor="@color/color_ff383b"
                android:textSize="@dimen/_12dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15dp"
            android:text="购买5000元以上使用"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/_16dp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:maxLines="1"
            android:text="有效期："
            android:textColor="@color/color_999999"
            android:textSize="@dimen/_12dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="@dimen/_18dp"
        android:layout_height="@dimen/_18dp"
        android:layout_gravity="center"
        android:src="@drawable/no_check" />
</LinearLayout>