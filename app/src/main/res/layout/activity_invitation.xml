<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/color_ff5438" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:background="#FCEDDA"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="您的专属邀请码"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/_11dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="wtkgz"
                            android:textColor="@color/color_000000"
                            android:textSize="@dimen/_24dp" />

                        <TextView
                            android:id="@+id/tv_copy"
                            android:layout_width="@dimen/_40dp"
                            android:layout_height="@dimen/_22dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:background="#F72607"
                            android:gravity="center"
                            android:text="复制"
                            android:textColor="@color/color_ffffff"
                            android:textSize="@dimen/_11dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_invitation"
                        android:layout_width="130dp"
                        android:layout_height="36dp"
                        android:background="#F72607"
                        android:gravity="center"
                        android:text="立即邀请"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/_18dp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_18dp"
                android:text="我已邀请的好友"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/_15dp" />

            <TextView
                android:layout_width="@dimen/_50dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/color_f3f3f3" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_user"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/color_f3f3f3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_18dp"
                android:text="规则说明"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/_15dp" />

            <TextView
                android:layout_width="@dimen/_50dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/color_f3f3f3" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_66dp"
                android:layout_height="@dimen/_66dp"
                android:src="@mipmap/share_wehcat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_66dp"
                android:layout_height="@dimen/_66dp"
                android:src="@mipmap/share_moment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="朋友圈"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_66dp"
                android:layout_height="@dimen/_66dp"
                android:src="@mipmap/share_qr" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="面对面扫码"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_66dp"
                android:layout_height="@dimen/_66dp"
                android:src="@mipmap/share_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_13dp" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>