<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_marginTop="20dp" />


    <ImageView
        android:layout_width="@dimen/_50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_80dp"
        android:src="@mipmap/pay_success" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40dp"
        android:text="支付成功"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/_20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/_20dp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1388.00"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/_25dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14dp"
        android:text="仓库正在为您备货中"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/_14dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_check_order"
            android:layout_width="119dp"
            android:layout_height="@dimen/_37dp"
            android:layout_marginRight="@dimen/_30dp"
            android:background="@color/color_ff383b"
            android:gravity="center"
            android:text="查看订单"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/_14dp" />

        <TextView
            android:id="@+id/tv_main"
            android:layout_width="119dp"
            android:layout_height="@dimen/_37dp"
            android:layout_marginLeft="@dimen/_30dp"
            android:background="@color/color_ffffff"
            android:gravity="center"
            android:text="返回首页"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/_14dp" />

    </LinearLayout>

</LinearLayout>