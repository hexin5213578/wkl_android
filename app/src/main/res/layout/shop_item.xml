<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_9dp"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_12dp"
    android:paddingTop="@dimen/_14dp"
    android:paddingRight="@dimen/_12dp"
    android:paddingBottom="@dimen/_17dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="31dp"
            android:layout_height="31dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_6dp"
            android:layout_weight="1"
            android:text="百威官方旗舰店"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/_14dp" />

        <TextView
            android:id="@+id/tv_in_shop"
            android:layout_width="@dimen/_45dp"
            android:layout_height="@dimen/_22dp"
            android:gravity="center"
            android:text="进店"
            android:textColor="@color/color_fd1100"
            android:textSize="@dimen/_14dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14dp">

    </androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12dp"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>



















