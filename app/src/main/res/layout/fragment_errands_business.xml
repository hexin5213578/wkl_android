<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/shape_ll_divider_gray"
    android:orientation="vertical"
    android:showDividers="middle">

    <!--商家信息-->
    <LinearLayout
        android:id="@+id/llToShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@mipmap/shop_gray"
            android:drawablePadding="10dp"
            android:text="商家信息"
            android:textColor="@color/font_black_3"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进入店铺首页"
            android:textColor="@color/theme"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableStart="@mipmap/location_small"
            android:drawablePadding="10dp"
            android:text="河南省洛阳市涧西区长安路"
            android:textColor="@color/font_black_3"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/ivPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@mipmap/phone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableStart="@mipmap/clock"
            android:drawablePadding="10dp"
            android:text="营业时间：10:00-19:30"
            android:textColor="@color/font_black_3"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableStart="@mipmap/clock"
            android:drawablePadding="10dp"
            android:text="配送服务：由平台提供配送服务"
            android:textColor="@color/font_black_3"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBusinessQualification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableStart="@mipmap/clock"
            android:drawablePadding="10dp"
            android:text="店铺营业资质"
            android:textColor="@color/font_black_3"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@mipmap/arrow_right"
            android:drawablePadding="10dp"
            android:text="查看更多"
            android:textColor="@color/font_black_6"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>