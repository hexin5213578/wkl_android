<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="452dp"
        android:background="@color/color_ffffff"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="联合支付"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_17dp" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/_19dp"
                android:layout_height="@dimen/_19dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_15dp"
                android:src="@mipmap/ic_close" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_14dp"
                android:layout_height="@dimen/_18dp"
                android:src="@mipmap/ic_order_list" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9dp"
                android:text="订单明细"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_15dp" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_15dp"
            android:paddingRight="@dimen/_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总额"
                android:textColor="@color/color_131313"
                android:textSize="@dimen/_15dp" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="¥168.00"
                android:textColor="@color/color_ff3333"
                android:textSize="@dimen/_18dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginLeft="@dimen/_17dp"
            android:layout_marginTop="@dimen/_65dp"
            android:layout_marginRight="@dimen/_17dp"
            android:layout_marginBottom="@dimen/_15dp"
            android:background="@color/color_ff5438"
            android:gravity="center"
            android:text="确认支付"
            android:textColor="@color/color_ffffff" />


    </LinearLayout>

</LinearLayout>