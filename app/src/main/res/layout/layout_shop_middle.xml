<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/shape_white_bg"
    android:orientation="vertical">

    <!--我的订单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llToOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/order"
                android:drawablePadding="5dp"
                android:text="我的订单"
                android:textColor="@color/font_black_3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/arrow_right"
                android:drawablePadding="10dp"
                android:gravity="end"
                android:text="查看全部订单"
                android:textColor="@color/font_black_9" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvWaitPay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/wait_pay"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="待付款"
                android:textColor="@color/font_black_6"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvWaitReceivingGoods"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/wait_received"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="待收货"
                android:textColor="@color/font_black_6"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvWaitEvaluate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/wait_evaluated"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="待评价"
                android:textColor="@color/font_black_6"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvRefund"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/refund"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="退款/取货"
                android:textColor="@color/font_black_6"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>