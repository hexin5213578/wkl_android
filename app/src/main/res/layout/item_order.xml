<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_15dp"
    android:paddingTop="@dimen/_15dp"
    android:paddingRight="@dimen/_15dp">

    <!--店铺名称和订单状态-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/order_shop"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="这是店铺名字"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/_12dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="订单状态"
            android:textColor="@color/color_f72607"
            android:textSize="@dimen/_13dp" />


    </LinearLayout>

    <!--商品详细信息-->
    <LinearLayout
        android:id="@+id/ll_single_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <!--商品图片-->
        <ImageView
            android:id="@+id/iv_single_img"
            android:layout_width="@dimen/_87dp"
            android:layout_height="@dimen/_87dp"
            android:scaleType="centerCrop"
            android:src="@color/color_ff5b5a" />

        <!--商品参数-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="帆布鞋女新款复古港风韩版鞋子"
                android:textColor="@color/color_555"
                android:textSize="@dimen/_11dp" />

            <TextView
                android:id="@+id/tv_goods_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="颜色：白色  尺码：37"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/_10dp" />

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="￥20.00"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/_10dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_more_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <!--商品图片-->
        <ImageView
            android:id="@+id/iv_img1"
            android:layout_width="@dimen/_87dp"
            android:layout_height="@dimen/_87dp"
            android:scaleType="centerCrop"
            android:src="@color/color_ff5b5a" />


        <ImageView
            android:id="@+id/iv_img2"
            android:layout_width="@dimen/_87dp"
            android:layout_height="@dimen/_87dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:scaleType="centerCrop"
            android:src="@color/color_ff5b5a" />

        <ImageView
            android:id="@+id/iv_img3"
            android:layout_width="@dimen/_87dp"
            android:layout_height="@dimen/_87dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:scaleType="centerCrop"
            android:src="@color/color_ff5b5a" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical">

            <TextView
                android:id="@+id/tv_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共6件"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/_12dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                android:src="@mipmap/arrow_right" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_more_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共1件商品 合计:￥"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/_11dp" />

        <TextView
            android:id="@+id/tv_pay_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="10"
            android:textColor="@color/color_333333"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_yunfei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(含运费0.00)"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/_11dp" />
    </LinearLayout>
    <!--待收货状态-->
    <LinearLayout
        android:id="@+id/llWaitReceived"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_strock_bac_gray_corner50"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="取消订单"
            android:textColor="@color/font_black_6"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_strock_bac_gray_corner50"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="查看物流"
            android:textColor="@color/color_333333"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_confrim"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_strock_theme_50dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="确认收货"
            android:textColor="@color/color_f72607"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_strock_theme_50dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="付款"
            android:textColor="@color/color_f72607"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_strock_theme_50dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="评价"
            android:textColor="@color/color_f72607"
            android:textSize="13dp" />
    </LinearLayout>

</LinearLayout>