<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--colorPrimary:标题栏  colorPrimaryDark：状态栏  colorAccent：控件-->
        <item name="colorPrimary">@color/font_black_6</item>
        <item name="colorPrimaryDark">@color/font_black_3</item>
        <item name="colorAccent">@color/theme</item>
        <item name="android:textColor">@color/font_black_3</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--全屏模式-->
    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--首页tab-->
    <style name="MainTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/selector_tab_text_color</item>
    </style>

    <!--等待框-->
    <style name="LoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="LoadingProgressBar">
        <item name="android:indeterminateDrawable">@anim/anim_rotate_dialog_loading</item>
        <!--<item name="android:indeterminateDuration">2000</item>-->
    </style>
    <!--对话框样式-->
    <style name="PXDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- 背景颜色-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--个人钱包textview style-->
    <style name="comm_text">
        <item name="android:layout_width">80dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BtSubmit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:background">@drawable/shape_but_bac</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_width">@dimen/_18dp</item>
        <item name="android:layout_height">@dimen/_18dp</item>
        <item name="android:button">@drawable/selector_check_box</item>
    </style>

    <style name="GoodsCheckBoxStyle">
        <item name="android:layout_width">@dimen/_30dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@drawable/selector_check_box</item>
    </style>

    <!--窗口Activity-->
    <style name="ActivityDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsFloating">true</item>
        <!--dialog会自适应-->
    </style>

    <style name="RatingBarStyle" parent="Base.Widget.AppCompat.RatingBar.Indicator">
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>
        <item name="android:isIndicator">false</item>
        <item name="android:thumb">@null</item>
    </style>
    d

    <style name="TabItemText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14dp</item>
    </style>

    <!-- 从底部弹出动画 -->
    <style name="AnimFromBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>


    <!-- 分享页 样式 -->
    <style name="ShareTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AnimFromBottom</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 灰度值 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!-- View 相关样式 -->
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.Dialog_Title">
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/ts_16</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/_20dp</item>
        <item name="android:layout_marginBottom">@dimen/_20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="View">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="View.Spread_Line_Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1dp</item>
        <item name="android:background">@color/color_ececec</item>
    </style>

</resources>
